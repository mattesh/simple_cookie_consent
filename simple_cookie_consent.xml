<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
	<name>System Plugin Simple Cookie Consent</name>
	<author>SimpleTools.nl &amp; Mattes H.</author>
	<creationDate>December 2025</creationDate>
	<copyright>Copyright (C) 2019 SimpleTools.nl &amp; Mattes H.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>mattes_h@gmx.net</authorEmail>
	<authorUrl>www.github.com</authorUrl>
	<version>2.0.1</version>
	<description>PLG_SYSTEM_SIMPLE_COOKIE_CONSENT_XML_DESCRIPTION</description>
	<files>
		<filename plugin="simple_cookie_consent">simple_cookie_consent.php</filename>
		<filename>html.css</filename>
		<filename>html.js</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_system_simple_cookie_consent.ini</language>
		<language tag="en-GB">en-GB.plg_system_simple_cookie_consent.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="simple_gdpr_cookie_text"
						type="textarea"
						label="PLG_SYSTEM_SIMPLE_COOKIE_CONSENT_COOKIE_TEXT"
						default="We use cookies to improve our service for you. You can find more information from our &lt;a href=&quot;CHANGE_THIS_WITH_YOUR_PRIVACY_POLICY_URL&quot;&gt;privacy policy&lt;/a&gt;"
						class="span12"
						rows="7"
						cols="20"
						filter="RAW"
				/>

				<field
						name="simple_gdpr_cookie_btn_text"
						type="textarea"
						label="PLG_SYSTEM_SIMPLE_COOKIE_CONSENT_COOKIE_BTN_TEXT"
						default="Accept Cookies"
						class="span12"
						rows="1"
						cols="20"
						filter="html"
				/>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" priority="1" name="SIMPLE_COOKIE_CONSENT">https://raw.githubusercontent.com/mattesh/simple_cookie_consent/refs/heads/updates/simple_cookie_consent.xml</server>
	</updateservers>
</extension>
